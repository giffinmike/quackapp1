{
  "compilerOptions": {
    "jsx": "react", // or "react-jsx" for React 17+
    "target": "es6",
    "lib": ["esnext"],
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": "./backend",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "node"  // Ensure this is set to "node"
  },
  "include": ["backend/**/*.ts"]
}
