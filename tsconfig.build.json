{
  "compilerOptions": {
    "outDir": "./build",
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./backend",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "resolveJsonModule": true
  },
  "include": [
    "backend/server.ts",
    "backend/**/*",
    "backend/**/*.ts",
    "backend/**/*.tsx",
    "@types/env.d.ts"
  ]
}
